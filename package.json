{
  "name": "workspace-tint",
  "displayName": "Tinto",
  "description": "ðŸŽ¨ Automatically assign unique, deterministic colors to VS Code workspaces. Never lose track of which project you're working on!",
  "version": "1.2.0",
  "publisher": "tinto",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other", "Themes"],
  "keywords": [
    "workspace",
    "color",
    "tint",
    "theme",
    "visual",
    "organization",
    "productivity",
    "ui",
    "customization",
    "deterministic"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Tinto",
      "properties": {
        "tinto.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic workspace tinting."
        },
        "tinto.lockColor": {
          "type": "string",
          "default": "",
          "description": "Optional hex color (e.g. #0A84FF) to pin a specific tint for this workspace."
        },
        "tinto.saturation": {
          "type": "number",
          "default": 70,
          "minimum": 0,
          "maximum": 100,
          "description": "Color saturation percentage (0-100)."
        },
        "tinto.lightness": {
          "type": "number",
          "default": 50,
          "minimum": 0,
          "maximum": 100,
          "description": "Color lightness percentage (0-100)."
        }
      }
    },
    "commands": [
      {
        "command": "tinto.applyTint",
        "title": "Tinto: Apply Workspace Tint"
      },
      {
        "command": "tinto.removeTint",
        "title": "Tinto: Remove Workspace Tint"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Michael-A-Kuykendall/tinto"
  },
  "bugs": {
    "url": "https://github.com/Michael-A-Kuykendall/tinto/issues"
  },
  "homepage": "https://github.com/Michael-A-Kuykendall/tinto#readme",
  "author": "Michael A Kuykendall <michaelallenkuykendall@gmail.com>",
  "license": "MIT",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^5.4.0"
  }
}
